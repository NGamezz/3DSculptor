#pragma kernel CSMain

struct PointData
{
    int3 id;
    float value;
};

RWTexture3D<float> editTexture;
RWStructuredBuffer<PointData> valueBuffer;
int size;

[numthreads(8, 8, 8)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    //if (id.x >= size)
    //    return;
    
    int3 bufferId = valueBuffer[id.x].id;
    editTexture[bufferId] = valueBuffer[id.x].value;
}
